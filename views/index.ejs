<%- include('./partials/header') %>

<div class="hero">
    <h1>Welcome to Fiks ferdig</h1>
    <p>The simple way to organize your daily tasks</p>
    
    <% if (!locals.isAuthenticated) { %>
        <a href="/sign-up" class="cta-button">Get Started</a>
    <% } else { %>
        <a href="/" class="cta-button">View My To-Do List</a>
    <% } %>
</div>

<div class="features">
    <div class="feature">
        <h2><i class="fas fa-tasks"></i> Create Daily Lists</h2>
        <p>Organize your tasks day by day</p>
    </div>
    
    <div class="feature">
        <h2><i class="fas fa-check-circle"></i> Track Completion</h2>
        <p>Mark tasks as complete as you finish them</p>
    </div>
    
    <div class="feature">
        <h2><i class="fas fa-calendar-alt"></i> Navigate Through Days</h2>
        <p>View and manage tasks for any day</p>
    </div>
</div>

<%- include('./partials/footer') %>