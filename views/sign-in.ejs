<%- include('./partials/header') %>

<div class="auth-container">
    <form action="/sign-in" method="POST" class="auth-form">
        <h2>Sign In</h2>
        
        <% if (locals.feedback) { %>
            <div class="feedback-field" role="alert">
                <%= feedback %>
            </div>
        <% } %>
        
        <div class="form-group">
            <input type="email" id="epost" name="epost" placeholder="Email" required aria-label="Email">
        </div>
        
        <div class="form-group">
            <input type="password" id="passord" name="passord" placeholder="Password" required aria-label="Password">
        </div>
        
        <button type="submit">Sign In</button>
        
        <p class="auth-link">
            Don't have an account? <a href="/sign-up">Sign Up</a>
        </p>
    </form>
</div>

<%- include('./partials/footer') %>